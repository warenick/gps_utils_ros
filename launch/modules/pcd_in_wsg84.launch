<launch>
  <!-- that config for medium_loop_map.pcd -->
  <!-- 0) pub the map -->
  <node pkg="pcl_ros" type="pcd_to_pointcloud" name="pcd_to_pointcloud" args="/home/pazuzu/storage/rosbag/bags/outdoor/medium_loop_map.pcd _frame_id:=map_rotated _latch:=true"/>
  <!-- 1) if you need to rotate map, do it here by map->map_rotated tf-->
  <node pkg="tf" type="static_transform_publisher" name="map_transform" args="0 0 0 2.00 0 0 map map_rotated 100"  />
  
  <node pkg="swri_transform_util" type="initialize_origin.py" name="initialize_map_origin_in_wsg84" >
    <param name="local_xy_frame" value="map"/>
    <param name="local_xy_origin" value="map"/>
    <rosparam param="local_xy_origins">
    <!-- 2) put here coordinate of map in wsg84 coordinate system -->
      [{ name: map,
         latitude: 55.738617,
         longitude: 37.524898,
         altitude: 160.,
         heading: 0.0},
       ]
    </rosparam>
  </node>  
</launch>
